function add_search_plugin(id,ext,name,cat){if((typeof window.sidebar=="object")&&(typeof window.sidebar.addSearchEngine=="function")){window.sidebar.addSearchEngine("http://www.opensubtitles.org/addons/plugins/mozilla/"+id+".src","http://www.opensubtitles.org/addons/plugins/mozilla/"+id+"."+ext,name,cat);}else{alert("Your browser does not support standard Sherlock search plugins!\nTry using a Mozilla based browser such as Firefox.");}}